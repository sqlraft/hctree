set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_journal_schema

hct_reset_db
catch_hct_journal_init db
sqlite3_hct_journal_setmode db LEADER

do_test 1.0 {
  hct_write_leader db {
    CREATE TABLE t1(b TEXT, a INTEGER PRIMARY KEY);
    CREATE TABLE t2(b TEXT, a INTEGER PRIMARY KEY);
    CREATE TRIGGER AFTER INSERT ON t1 BEGIN
      INSERT INTO t2 VALUES(new.b, NULL);
    END;
  }
} {SQLITE_OK 2 1}

do_test 1.1 {
  hct_write_leader db { INSERT INTO t1 VALUES('one', 1); }
  hct_write_leader db { INSERT INTO t1 VALUES('two', 2); }
} {SQLITE_OK 4 3}


forcedelete test.db2
sqlite3 db2 file:test.db2?hctree=1 -uri 1
catch_hct_journal_init db2
sqlite3_hct_journal_setmode db2 FOLLOWER

do_test 1.2 {
  db eval { SELECT cid, query, snapshot FROM hct_journal } {
    hct_write_follower db2 $cid $snapshot $query
  }
} {}

do_execsql_test -db db2 1.3 {
  SELECT a, b FROM t2;
} {
  1 one 2 two
}

sqlite3_hct_journal_setmode db FOLLOWER
sqlite3_hct_journal_setmode db2 LEADER

do_test 1.4 {
  hct_write_leader db2 { INSERT INTO t1 VALUES('three', 3); }
} {SQLITE_OK 5 4}

do_execsql_test -db db2 1.5 { SELECT a, b FROM t1 } { 1 one 2 two 3 three }
do_execsql_test -db db2 1.6 { SELECT a, b FROM t2 } { 1 one 2 two 3 three }

do_test 1.7 {
  db2 eval { 
    SELECT cid, snapshot, query FROM hct_journal ORDER BY cid DESC LIMIT 1
  } {
    hct_write_follower db $cid $snapshot $query
  }
} {}

do_execsql_test 1.8 { SELECT a, b FROM t1 } { 1 one 2 two 3 three }
do_execsql_test 1.9 { SELECT a, b FROM t2 } { 1 one 2 two 3 three }


finish_test

