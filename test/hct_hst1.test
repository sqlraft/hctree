# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_hst1

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE tbl(
    a INTEGER PRIMARY KEY,
    b BLOB,
    c CHAR(64)
  );
}

do_execsql_test 1.1 {
  CREATE INDEX tbl_i1 ON tbl( substr(c, 1, 16) );
}

do_execsql_test 1.2 {
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<10000
  )
  INSERT INTO tbl SELECT i, randomblob(200), hex(randomblob(32)) FROM s;
}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 1.3 {
  PRAGMA hct_npagescan = 2;

  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<10000
  )
  INSERT INTO t1 SELECT i, randomblob(200) FROM s;
} {2}

do_execsql_test 1.4 {
  UPDATE t1 SET b = randomblob(200);
  UPDATE t1 SET b = randomblob(200);
  UPDATE t1 SET b = randomblob(200);
  UPDATE t1 SET b = randomblob(200) WHERE a=1;
  UPDATE t1 SET b = randomblob(200) WHERE a=2;
  UPDATE t1 SET b = randomblob(200) WHERE a=3;
}

set physical_eof [db one {SELECT value FROM hctpgmap WHERE slot=4}]

sqlite3 db2 test.db
do_execsql_test -db db2 1.5 {
  SELECT count(*) FROM t1
} {10000}

do_test 1.6 {
  for {set i 0} {$i < 10000} {incr i} {
    db eval { UPDATE t1 SET b = randomblob(200) WHERE a=$i; }
  }
} {}

do_execsql_test 1.7 {
  SELECT value FROM hctpgmap WHERE slot=4
} $physical_eof

db2 close
db close

finish_test

