# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_fk

hct_reset_db

foreach {tn sql} {
  1 { 
    CREATE TABLE p1(a INTEGER PRIMARY KEY, b TEXT);
    CREATE TABLE c1(x INTEGER PRIMARY KEY, y INTEGER REFERENCES p1);
  }
  2 { 
    CREATE TABLE p1(a INTEGER UNIQUE, b TEXT);
    CREATE TABLE c1(x INTEGER PRIMARY KEY, y INTEGER REFERENCES p1(a));
  }
} {
  hct_reset_db
  execsql $sql
  do_execsql_test 1.$tn.1 {
    PRAGMA foreign_keys = on;
  
    INSERT INTO p1 VALUES(1, 'one');
    INSERT INTO p1 VALUES(2, 'two');
    INSERT INTO p1 VALUES(3, 'three');
  
    INSERT INTO c1 VALUES(100, 1);
    INSERT INTO c1 VALUES(101, 1);
  }
  
  sqlite3 db2 test.db
  
  do_execsql_test 1.$tn.2 {
    BEGIN;
      INSERT INTO c1 VALUES(200, 2);
  }
  
  do_execsql_test -db db2 1.$tn.3 {
    DELETE FROM p1 WHERE a=2;
  }
  
  do_catchsql_test 1.$tn.4 {
    COMMIT;
  } {1 {database is locked}}
  catchsql ROLLBACK
  
  do_execsql_test 1.$tn.5 {
    PRAGMA foreign_key_check
  } {}
  
  do_execsql_test 1.$tn.6 {
    PRAGMA foreign_keys = off;
  } {}
  
  do_execsql_test 1.$tn.7 {
    BEGIN;
      SELECT * FROM p1;
      INSERT INTO c1 VALUES(200, 2);
  } {
    1 one 3 three
  }
  
  do_execsql_test -db db2 1.$tn.8 {
    DELETE FROM p1 WHERE a=1;
  }
  
  do_catchsql_test 1.$tn.9 {
    COMMIT;
  } {1 {database is locked}}
  catchsql ROLLBACK
  
  db close
  db2 close
}

finish_test

