# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc6

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b TEXT);
}

do_execsql_test 1.1 {
  CREATE INDEX t1b ON t1(b);
}

if 1 {

do_execsql_test 1.2.1 {
  INSERT INTO t1 VALUES(1, 'one');
  INSERT INTO t1 VALUES(2, 'two');
  INSERT INTO t1 VALUES(3, 'three');
  INSERT INTO t1 VALUES(4, 'four');
}

#execsql_pp { SELECT logical, keys FROM hctpgmap NATURAL JOIN hctdb }

do_execsql_test 1.3 {
  SELECT * FROM t1 ORDER BY b;
} {
  4 four 1 one 3 three 2 two
}

do_execsql_test 1.4 { PRAGMA integrity_check } {ok}

do_execsql_test 1.5 {
  SELECT * FROM t1 ORDER BY +b DESC;
} {
  2 two 3 three 1 one 4 four 
}

do_execsql_test 1.6.1 {
  DELETE FROM t1 WHERE a=2;
}
do_execsql_test 1.6.2 {
  SELECT * FROM t1 ORDER BY a;
} {
  1 one 3 three 4 four
}

do_execsql_test 1.7 {
  DELETE FROM t1 WHERE a IN(1,4);
  SELECT * FROM t1 ORDER BY a;
} {
  3 three
}
}

# execsql_pp { SELECT * FROM hctpgmap natural join hctdb }
# execsql_pp { SELECT * FROM hctpgmap natural join hctentry }
# execsql_pp { SELECT logical, keys FROM hctpgmap NATURAL JOIN hctdb }

set nRow 5000
do_test 1.8 {
  for {set ii 5} {$ii < $nRow} {incr ii} {
    execsql { INSERT INTO t1 VALUES($ii, hex(randomblob(50))) }
  }
  set {} {}
} {}

do_execsql_test 1.9 { PRAGMA integrity_check } {ok}

