hct_reset_db
set nRow 1000

do_execsql_test 3.0 {
  CREATE TABLE t2(x INTEGER PRIMARY KEY, y TEXT, z TEXT);
  CREATE INDEX t2y ON t2(y);
  CREATE INDEX t2z ON t2(z);
}

do_test 3.1 {
  catch { array unset D }
  db transaction {
    for {set ii 0} {$ii < $nRow} {incr ii} {
      set y [db one {SELECT hex(randomblob(20))}]
      set z [db one {SELECT hex(randomblob(20))}]
      set D($ii) [list $y $z]
      execsql { INSERT INTO t2 VALUES($ii, $y, $z) }
    }
  }
} {}

# execsql_pp { SELECT pgno, logical, nentry, peer, keys FROM hctpgmap NATURAL JOIN hctdb }
do_execsql_test 3.2 { PRAGMA integrity_check } {ok}

finish_test

