# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_hst2

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE tbl(
    a INTEGER PRIMARY KEY,
    b BLOB,
    c CHAR(64)
  );
}

do_execsql_test 1.1 {
  CREATE INDEX tbl_i1 ON tbl( substr(c, 1, 16) );
  CREATE INDEX tbl_i2 ON tbl( substr(c, 2, 16) );
}


do_execsql_test 1.2 {
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<100000
  )
  INSERT INTO tbl SELECT i, randomblob(200), hex(randomblob(32)) FROM s;
}


#------------------------------------------------------------------------
hct_reset_db
do_execsql_test 2.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, t TEXT);
  CREATE INDEX i1 ON t1(t);
  INSERT INTO t1 VALUES(456, 'abcdefghijklmnopqrstuvwxyz');
}
sqlite3 db2 test.db

do_execsql_test 2.1.1 {
  BEGIN;
    UPDATE t1 SET t = 'ABCDEFG';
}

do_execsql_test -db db2 2.1.2 {
  UPDATE t1 SET t = 'hello world';
}
do_catchsql_test 2.1.3 {
  COMMIT
} {1 {database is locked}}
execsql ROLLBACK
do_execsql_test 2.1.4 {
  PRAGMA integrity_check;
} {ok}

do_execsql_test 2.2.1 {
  BEGIN;
    UPDATE t1 SET t = 'ABCDEFG';
}

do_execsql_test -db db2 2.2.2 {
  UPDATE t1 SET t = 'world hello';
  UPDATE t1 SET t = 'abcdefg';
  UPDATE t1 SET t = 'nothing elsejk';
}
do_catchsql_test 2.2.3 {
  COMMIT
} {1 {database is locked}}
execsql ROLLBACK
do_execsql_test 2.2.4 {
  PRAGMA integrity_check;
} {ok}

finish_test

