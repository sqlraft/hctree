# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_overflow1

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
  INSERT INTO t1 VALUES(1, randomblob(20000));
  CREATE INDEX i1 ON t1(b);
}

do_execsql_test 1.1 {
  PRAGMA hct_quiescent_integrity_check = 1;
} {1}

do_execsql_test 1.2 {
  PRAGMA integrity_check
} {ok}

do_execsql_test 1.3 {
  DELETE FROM t1 WHERE a=1;
} {}

do_execsql_test 1.4 { PRAGMA integrity_check } {ok}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 2.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
  CREATE TABLE t2(a INTEGER PRIMARY KEY, b);
  CREATE TABLE t3(a INTEGER PRIMARY KEY, b);
}

sqlite3 db2 test.db
do_execsql_test -db db2 2.1 {
  BEGIN;
    INSERT INTO t2 VALUES(4, 4);
}

do_execsql_test 2.2 {
  BEGIN;
    INSERT INTO t1 VALUES(4, randomblob(13000));
    INSERT INTO t2 VALUES(4, randomblob(13000));
    INSERT INTO t3 VALUES(4, randomblob(13000));
}

do_execsql_test -db db2 2.3 {
  COMMIT
}

do_catchsql_test 2.4 {
  COMMIT
} {1 {database is locked}}
execsql ROLLBACK

do_execsql_test 2.5 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

do_execsql_test 2.6 {
  INSERT INTO t1 VALUES(12, randomblob(13000));
  INSERT INTO t2 VALUES(12, randomblob(13000));
  INSERT INTO t3 VALUES(12, randomblob(13000));
}

do_execsql_test -db db2 2.7 {
  BEGIN;
    DELETE FROM t2 WHERE a=12;
}

do_execsql_test 2.8 {
  BEGIN;
    DELETE FROM t1 WHERE a=12;
    DELETE FROM t2 WHERE a=12;
    DELETE FROM t3 WHERE a=12;
}

do_execsql_test -db db2 2.9 {
  COMMIT
}

breakpoint
do_catchsql_test 2.10 {
  COMMIT
} {1 {database is locked}}

do_execsql_test 2.11 {
  ROLLBACK;
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

#-------------------------------------------------------------------------

hct_reset_db

do_execsql_test 3.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
}

sqlite3 db2 test.db
do_execsql_test -db db2 3.1 {
  BEGIN;
    INSERT INTO t1 VALUES(700, 700);
}

do_execsql_test 3.2 {
  BEGIN;
    INSERT INTO t1 VALUES(4, randomblob(13000));
    INSERT INTO t1 VALUES(700, 701);
}

do_execsql_test -db db2 3.3 {
  COMMIT
}

do_catchsql_test 3.4 {
  COMMIT
} {1 {database is locked}}

do_execsql_test 3.5 {
  ROLLBACK;
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

db2 close
db close

finish_test

