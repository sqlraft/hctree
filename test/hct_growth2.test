# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_growth2

hct_reset_db

set ::LOGICAL_EOF  3
set ::PHYSICAL_EOF 4

do_execsql_test 1.0 {
  SELECT slot, value FROM hctpgmap WHERE slot IN ($LOGICAL_EOF, $PHYSICAL_EOF)
} [list $LOGICAL_EOF 256 $PHYSICAL_EOF 256]

do_execsql_test 1.1 { 
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b char(32), c char(32));
} {}

do_execsql_test 1.2 {
  SELECT slot, value FROM hctpgmap WHERE slot IN ($LOGICAL_EOF, $PHYSICAL_EOF)
} [list $LOGICAL_EOF 256 $PHYSICAL_EOF 256]
 
do_execsql_test 1.3 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

do_execsql_test 1.4 {
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<11000
  )
  INSERT INTO t1 SELECT i, randomblob(32), randomblob(32) FROM s;
}

do_execsql_test 1.5 {
  SELECT slot, value FROM hctpgmap WHERE slot IN ($LOGICAL_EOF, $PHYSICAL_EOF)
} [list $LOGICAL_EOF 512 $PHYSICAL_EOF 512]

finish_test
