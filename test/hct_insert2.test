# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_insert2

hct_reset_db

do_execsql_test 1.0 {
  PRAGMA page_size = 512;
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b TEXT);

  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<1000
  )
  INSERT INTO t1(b) SELECT hex(randomblob(20)) FROM s;

  CREATE INDEX i1 ON t1(b);
}

integrity_check 1.1

do_execsql_test 1.2 {
  INSERT INTO t1(b) VALUES( hex(randomblob(20)) );
}

do_execsql_test 1.3 {
  INSERT INTO t1(b) VALUES( hex(randomblob(20)) );
}

do_execsql_test 1.4 {
  INSERT INTO t1(b) VALUES( hex(randomblob(20)) );
}

integrity_check 1.5


finish_test
