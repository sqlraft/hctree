do_execsql_test 2.0 {
  BEGIN;
    CREATE TABLE t2(a INTEGER PRIMARY KEY, b, c);
    INSERT INTO t2 VALUES(1, 22, 45);
    INSERT INTO t2 VALUES(2, 22, 46);
    INSERT INTO t2 VALUES(3, 22, 47);
    CREATE INDEX i1 ON t2(b, c);
