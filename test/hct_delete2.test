# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_delete2

hct_reset_db
sqlite3 db2 test.db

do_execsql_test 1.0 {
  BEGIN;
    CREATE TABLE x1(y INTEGER PRIMARY KEY, z TEXT);
    WITH s(i) AS (
      VALUES(1) UNION ALL SELECT i+1 FROM s WHERE i<80
    ) 
    INSERT INTO x1(z) SELECT quote(randomblob(10)) FROM s;
  COMMIT;
}

do_execsql_test 1.1 {
  BEGIN;
    UPDATE x1 SET z = quote(randomblob(20)) WHERE y=30
}

do_execsql_test -db db2 1.2 {
  DELETE FROM x1 WHERE y BETWEEN 5 AND 75
}

do_catchsql_test 1.3 {
  COMMIT
} {1 {database is locked}}


finish_test

