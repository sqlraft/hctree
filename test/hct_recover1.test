# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_recover1

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE t1(x, y);
  INSERT INTO t1 VALUES(1, 2);
}

do_execsql_test 1.2 {
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<=10
  )
  INSERT INTO t1 SELECT randomblob(500), randomblob(500) FROM s;
  UPDATE t1 SET y = randomblob(500);
}

db close
breakpoint
sqlite3 db test.db

execsql { SELECT * FROM t1 limit 1 }

do_execsql_test 1.3 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

finish_test

