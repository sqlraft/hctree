# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_overflow2

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, big TEXT);
  CREATE INDEX t1t ON t1(big);

  INSERT INTO t1 VALUES(44, quote(randomblob(3000)));
}

do_execsql_test 1.1 {
  UPDATE t1 SET big = quote(randomblob(3000));
}

do_execsql_test 1.2 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
} {1 ok}

do_execsql_test 1.3 {
  UPDATE t1 SET big = quote(randomblob(3000));
}

do_execsql_test 1.4 {
  PRAGMA integrity_check;
} {ok}

do_execsql_test 1.5 {
  UPDATE t1 SET big = quote(randomblob(3000));
}

do_execsql_test 1.6 {
  PRAGMA integrity_check;
} {ok}

do_test 1.7 {
  for {set ii 0} {$ii < 100} {incr ii} {
    execsql { UPDATE t1 SET big = quote(randomblob(3000)) }
  }
} {}

do_execsql_test 1.8 {
  PRAGMA integrity_check;
} {ok}

finish_test

