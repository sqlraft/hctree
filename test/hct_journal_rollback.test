set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_journal_rollback

hct_reset_db
catch_hct_journal_init db
sqlite3_hct_journal_setmode db LEADER

do_test 1.0 {
  foreach sql [split [string trim {
    CREATE TABLE t1(a INTEGER PRIMARY KEY, b TEXT);
    INSERT INTO t1 VALUES(1, 'one');   
    INSERT INTO t1 VALUES(2, 'two');  
    INSERT INTO t1 VALUES(3, 'three');
    INSERT INTO t1 VALUES(4, 'four');
    INSERT INTO t1 VALUES(5, 'five');
    INSERT INTO t1 VALUES(6, 'six');
    INSERT INTO t1 VALUES(7, 'seven');
    INSERT INTO t1 VALUES(8, 'eight');
    INSERT INTO t1 VALUES(9, 'nine');
    INSERT INTO t1 VALUES(10, 'ten');
  }] "\n"] {
    hct_write_leader db [string trim $sql]
  }
} {}

# execsql_pp { SELECT cid, snapshot, query FROM hct_journal; }

proc hct_write_follower {db cid snapshot query} {
  $db eval BEGIN
  $db eval $query
  set rc [sqlite3_hct_journal_follower_commit $db $query $cid $snapshot]
  if {$rc!="SQLITE_OK"} { error "rc=$rc" }
  return ""
}

proc do_ft_test {tn lCid res} {
  hct_delete_db test.db2
  sqlite3 db2 file:test.db2?hctree=1 -uri 1
  catch_hct_journal_init db2
  sqlite3_hct_journal_setmode db2 FOLLOWER

  foreach cid $lCid {
    db eval { SELECT cid, snapshot, query FROM hct_journal WHERE cid=$cid } { }
    hct_write_follower db2 $cid $snapshot $query
  }

  uplevel [list do_execsql_test -db db2 $tn.1 {SELECT * FROM t1} $res]
  hct_copy_db test.db2 test.db3
  db2 close
  sqlite3 db2 test.db3
  uplevel [list do_execsql_test -db db2 $tn.2 {SELECT * FROM t1} $res]
  db2 close
}

do_ft_test 2.1 {2 3 4 5} {
  1 one
  2 two
  3 three
}

do_ft_test 2.2 {2 3 4 5 7 9 11} {
  1 one
  2 two
  3 three
}

do_ft_test 2.3 {2 7 9 11 5 4 3} {
  1 one
  2 two
  3 three
}

