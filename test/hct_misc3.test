# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc3

do_execsql_test 1.0 {
  CREATE TABLE tx(a INTEGER PRIMARY KEY, b TEXT);
}

do_execsql_test 1.1 {
  INSERT INTO tx VALUES(4, 'four');
  INSERT INTO tx VALUES(5, 'five');
  INSERT INTO tx VALUES(2, 'two');
  INSERT INTO tx VALUES(6, 'six');
  INSERT INTO tx VALUES(7, 'seven');
  INSERT INTO tx VALUES(3, 'three');
  INSERT INTO tx VALUES(1, 'one');
  INSERT INTO tx VALUES(8, 'eight');
  INSERT INTO tx VALUES(9, 'nine');
  INSERT INTO tx VALUES(10, 'ten');
}

do_execsql_test 1.2 {
  SELECT b FROM tx ORDER BY a ASC
} {
  one two three four five six seven eight nine ten
}

do_execsql_test 1.3 {
  SELECT b FROM tx ORDER BY +a DESC
} {
  ten nine eight seven six five four three two one
}

do_execsql_test 1.4 {
  SELECT b FROM tx ORDER BY a DESC
} {
  ten nine eight seven six five four three two one
}

do_execsql_test 1.5 {
  SELECT b FROM tx WHERE a<7 ORDER BY a DESC
} {
  six five four three two one
}



do_execsql_test 1.10 {
  DELETE FROM tx WHERE a IN (2, 5, 8);
  SELECT b FROM tx ORDER BY a DESC
} {
  ten nine seven six four three one
}

#-------------------------------------------------------------------------
do_execsql_test 2.0 {
  CREATE TABLE t2(a INTEGER PRIMARY KEY, b TEXT);
}

set nRow [expr 10000]
do_execsql_test 2.1 {
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<$nRow
  )
  REPLACE INTO t2 SELECT (random() & 0xFFFF), hex(randomblob(300)) FROM s;
} {}

set res [db eval { SELECT a FROM t2 ORDER BY +a DESC }]
do_execsql_test 2.2 {
  SELECT a FROM t2 ORDER BY a DESC
} $res

set res [db eval { SELECT a FROM t2 WHERE +a<10000 ORDER BY +a DESC }]
do_execsql_test 2.3 {
  SELECT a FROM t2 WHERE a<10000 ORDER BY a DESC
} $res


finish_test

