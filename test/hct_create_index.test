# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_create_index

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE x1(a INTEGER PRIMARY KEY, b);
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<500
  )
  INSERT INTO x1(b) SELECT hex(randomblob(10)) FROM s;
}

do_execsql_test 1.1 {
  BEGIN CONCURRENT;
    CREATE INDEX i1 ON x1(b);
}

do_execsql_test 1.2 {
  COMMIT
}

do_execsql_test 1.3 {
  PRAGMA integrity_check
} ok

do_execsql_test 2.0 {
  CREATE TABLE y1(a INTEGER PRIMARY KEY, b TEXT);
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<0
  )
  INSERT INTO y1 SELECT i, i FROM s;
}

do_execsql_test 2.1 {
  CREATE INDEX y1b ON y1(b);
}

do_execsql_test 2.2 {
  SELECT * FROM y1 WHERE b = 50;
}

do_execsql_test 2.3 {
  PRAGMA integrity_check
} {ok}

finish_test



