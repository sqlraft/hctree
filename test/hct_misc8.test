# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc8

hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE tx(a INTEGER PRIMARY KEY, b BLOB);
  CREATE INDEX txb ON tx(b);
}

sqlite3 dbr :memory:
proc randomtext {n} {
  string range [dbr one {SELECT hex(randomblob($n))}] 1 $n
}

db func randomtext randomtext

do_test 1.1 {
  for {set i 1} {$i < 10000} {incr i} {
    execsql {INSERT INTO tx VALUES($i, randomtext($i))}
  }
} {}

do_execsql_test 1.2 {
  PRAGMA integrity_check
} {ok}

dbr close

#execsql_pp { SELECT * FROM hctpgmap natural join hctdb }
#execsql_pp { SELECT * FROM hctpgmap natural join hctentry }

#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 1.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
  CREATE TABLE t2(x INTEGER PRIMARY KEY, y);
  INSERT INTO t1 VALUES(1, 'one');
  INSERT INTO t1 VALUES(2, 'two');
  INSERT INTO t1 VALUES(3, 'three');
  INSERT INTO t1 VALUES(4, 'four');
}

sqlite3 db2 test.db

do_execsql_test 1.1 {
  BEGIN CONCURRENT;
    SELECT * FROM t1 WHERE a<3;
    DELETE FROM t1 WHERE a<3;
} {1 one 2 two}

do_execsql_test -db db2 1.2 {
  INSERT INTO t2 VALUES(13, 'thirteen');
}

do_execsql_test 1.3 {
  COMMIT
}

show_db_entries

finish_test

