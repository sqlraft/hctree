# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_rowid

hct_reset_db

do_execsql_test 1.0 { 
  CREATE TABLE t1(a, b);
}

do_execsql_test 1.1 {
  INSERT INTO t1(rowid) VALUES(1);
  DELETE FROM t1;
  INSERT INTO t1(rowid) VALUES( 9_223_372_036_854_775_807 );
}

do_execsql_test 1.2 {
  SELECT * FROM t1 WHERE rowid = 100000
}

do_execsql_test 1.3 {
  INSERT INTO t1 DEFAULT VALUES;
}

do_execsql_test 1.4 { 
  DELETE FROM t1;
  INSERT INTO t1(rowid) VALUES( 9_223_372_036_854_775_807 );
}

do_test 1.5 {
  for {set ii 0} {$ii < 500} {incr ii} {
    db eval {
      INSERT INTO t1 VALUES($ii, $ii);
    }
  }
} {}

do_test 1.6 {
  db eval { BEGIN CONCURRENT }
  for {set ii 0} {$ii < 500} {incr ii} {
    db eval {
      INSERT INTO t1 VALUES($ii, $ii);
    }
  }
  db eval { COMMIT }
} {}

do_execsql_test 1.7 {
  DELETE FROM t1;
}

do_test 1.8 {
  db eval { BEGIN CONCURRENT }
  db eval { INSERT INTO t1(rowid) VALUES( 9_223_372_036_854_775_807 ) }
  for {set ii 0} {$ii < 500} {incr ii} {
    db eval {
      INSERT INTO t1 VALUES($ii, $ii);
    }
  }
  db eval { COMMIT }
} {}

# execsql_pp { SELECT rowid FROM t1 }

finish_test

