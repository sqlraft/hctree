#-------------------------------------------------------------------------
# Page-error in irrevocable eviction.
#
hct_reset_db

do_execsql_test 11.0 {
  CREATE TABLE t1(a PRIMARY KEY, b) WITHOUT ROWID;
  WITH x(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM x WHERE i<20
  )
  INSERT INTO t1 SELECT i, hex(randomblob(200)) FROM x;
}

foreach leaf [lrange [hct_leaf_list db t1] 1 end] {
  execsql {
    UPDATE hctpgmap SET logical_evicted=1 WHERE slot = $leaf
  }
}
faultsim_save_and_close

do_faultsim_test 11 -faults hctpage -prep {
  faultsim_restore_and_reopen
} -body {
  execsql { 
    BEGIN CONCURRENT;
      INSERT INTO t1 VALUES(500, hex(randomblob(200)));
    COMMIT;
  }
} -test {
  faultsim_test_result {0 {}}
}

finish_test



