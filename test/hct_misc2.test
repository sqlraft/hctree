# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc2

do_execsql_test 1.0 {
  CREATE TABLE tx(a INTEGER PRIMARY KEY, b);
}

expr srand(0)

do_test 1.1 {
  for {set i 0} {$i < 5000} {incr i} {
    set a  [expr int(rand()*100000000)]
    set nb [expr int(rand()*1000)]

    execsql { INSERT INTO tx VALUES($a, randomblob($nb)) }
  }
} {}

finish_test

