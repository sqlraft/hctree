# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc2

do_execsql_test 1.0 {
  CREATE TABLE tx(a INTEGER PRIMARY KEY, b TEXT);
}
do_execsql_test 1.1 {
  INSERT INTO tx VALUES(1346, hex(randomblob(38)));
  INSERT INTO tx VALUES(41465, hex(randomblob(6)));
}
do_execsql_test 1.2 {
  DELETE FROM tx WHERE a=1346;
}
do_execsql_test 1.3 {
  DELETE FROM tx WHERE a=41465;
}
#execsql_pp { SELECT * FROM hctdb; }
do_execsql_test 1.4 {
  SELECT * FROM tx;
}

#-------------------------------------------------------------------------
reset_db

do_execsql_test 2.0 {
  CREATE TABLE tx(a INTEGER PRIMARY KEY, b TEXT);
}

set nRow 2000
set nStep 100

expr srand(0)
unset -nocomplain data

for {set i 0} {$i < $nRow} {incr i} {
  set a  [expr int(rand()*100000)]
  set nb [expr int(rand()*100)]
  set txt [db one { SELECT hex(randomblob($nb)) }]
  execsql { REPLACE INTO tx VALUES($a, $txt) }
  set data($a) $txt
}

#execsql_pp { SELECT * FROM hctpgmap NATURAL JOIN hctdb; }
#execsql_pp { SELECT * FROM hctpgmap NATURAL JOIN hctentry }

foreach k [array names data] {
  do_execsql_test 2.1.$k {SELECT a, b FROM tx WHERE a=$k} [list $k $data($k)]
}

while {[llength [array names data]]>0} {
  set L [array names data]
  set i [expr int(rand()*[llength $L])]
  set k [lindex $L $i]
  execsql { DELETE FROM tx WHERE a = $k }
  unset data($k)
}

foreach k [array names data] {
  do_execsql_test 2.2.$k {
    SELECT a, b FROM tx WHERE a=$k
  } [list $k $data($k)]
}

do_execsql_test 2.x {
  SELECT * FROM tx
} {}

finish_test

