# This file implements regression tests for SQLite library.  The
# focus of this file is testing the UPDATE statement.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_update3

proc show_db_entries {} {
  execsql_pp {
    SELECT pgno, ikey, tid, rangetid, rangeoldpg FROM hctentry;
  }
}

hct_reset_db
do_execsql_test 1.0 { PRAGMA page_size = 1024 } {}

do_execsql_test 1.1 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b BLOB);
  CREATE INDEX i1 ON t1(b);
  INSERT INTO t1 VALUES(5, 'abcde');
  INSERT INTO t1 VALUES(6, 'xyz');
}

do_execsql_test 1.2 {
  DELETE FROM t1 WHERE a=5;
}

do_execsql_test 1.2 {
  SELECT * FROM t1;
} {6 xyz}

#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 2.0 { PRAGMA page_size = 1024 } {}

do_execsql_test 2.1 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b BLOB);
  CREATE INDEX i1 ON t1(b);
  INSERT INTO t1 VALUES(123, X'');
}

for {set ii 1} {$ii < 2000} {incr ii} {
  do_execsql_test 2.2.$ii {
    UPDATE t1 SET b = randomblob($ii);
    PRAGMA integrity_check;
  } {ok}
}


finish_test
