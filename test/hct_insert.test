hct_reset_db

do_execsql_test 2.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b TEXT);

  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<1000
  )
  INSERT INTO t1(b) SELECT hex(randomblob(70)) FROM s;
}

do_execsql_test 2.1 {
  UPDATE t1 SET b = hex(randomblob(70));
}

do_test 2.2 {
  for {set ii 1} {$ii <= 1000} {incr ii} {
    db eval {
      UPDATE t1 SET b = hex(randomblob(70)) WHERE a=$ii;
    }
  }
} {}

do_execsql_test 2.3 {
  SELECT val FROM hctstats WHERE stat='update_in_place'
} {1000}

