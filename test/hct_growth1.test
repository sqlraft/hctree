# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_growth1

hct_reset_db

do_execsql_test 1.1a { 
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b char(32), c char(32));
  CREATE INDEX i1 ON t1(b);
  CREATE INDEX i2 ON t1(c);
  WITH s(i) AS (
    SELECT 1 UNION ALL SELECT i+1 FROM s WHERE i<11000
  )
  INSERT INTO t1 SELECT i, randomblob(32), randomblob(32) FROM s;
} {}

execsql_pp {
  SELECT physical_in_use, count(*) FROM hctpgmap GROUP BY physical_in_use;
}

do_test 1.2 {
  for {set ii 0} {$ii < 100000} {incr ii} {
    execsql {
      UPDATE t1 
        SET b=randomblob(32), c=randomblob(32) WHERE a BETWEEN $ii AND $ii+1;
    }
  }
} {}

execsql_pp {
  SELECT physical_in_use, count(*) FROM hctpgmap GROUP BY physical_in_use;
}

finish_test

