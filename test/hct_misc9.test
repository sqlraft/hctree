# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_misc9

hct_reset_db

do_execsql_test 1.1 { 
  CREATE TABLE t1(i INTEGER PRIMARY KEY, a, b);
}

do_execsql_test 1.1b { 
  INSERT INTO t1 VALUES(489, 'AAA', 'BBB');
  UPDATE t1 SET b='CCCC' WHERE i=489;
}

#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 2.0 {
  CREATE TABLE t1(a, b);
  INSERT INTO t1 VALUES(1, 'AAA');
  INSERT INTO t1 VALUES(2, 'BBB');
  INSERT INTO t1 VALUES(3, 'CCC');
  INSERT INTO t1 VALUES(4, 'DDD');
  CREATE INDEX i1 ON t1(b);
}

do_execsql_test 2.1 {
  BEGIN;
    DELETE FROM t1 WHERE a=4;
}

do_execsql_test 2.2 {
  SELECT * FROM t1 WHERE b>'CCD' AND b<'EEE'
}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 3.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b UNIQUE);
  INSERT INTO t1 VALUES(13, 13);
  DELETE FROM t1 WHERE a=13;
}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 4.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b UNIQUE);
}
do_execsql_test 4.1 {
  SELECT * FROM t1 ORDER BY b DESC;
}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 5.0 {
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b);
  BEGIN;
    INSERT INTO t1 VALUES(10, 10);
    INSERT INTO t1 VALUES(11, 11);
    INSERT INTO t1 VALUES(12, 12);
    INSERT INTO t1 VALUES(13, 13);
    INSERT INTO t1 VALUES(14, 14);
  COMMIT;
}

do_execsql_test 5.1 {
  BEGIN CONCURRENT;
    INSERT INTO t1 VALUES(1, 1);
    INSERT INTO t1 VALUES(2, 2);
  COMMIT;
}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 6.0 {
  CREATE TABLE t1(x INTEGER PRIMARY KEY, b);
  INSERT INTO t1 VALUES(1, 'one');
}

do_execsql_test 6.1 {
  BEGIN CONCURRENT;
    UPDATE t1 SET b='two' WHERE x=1;
}

sqlite3 db2 test.db

do_execsql_test -db db2 6.2 {
  UPDATE t1 SET b='three' WHERE x=1;
}
  
do_catchsql_test 6.3 {
  COMMIT
} {1 {database is locked}}

do_catchsql_test 6.3 {
  SELECT * FROM t1
} {1 {database is locked}}

db2 close

#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 7.0 {
  CREATE TABLE x1(a);
}
sqlite3 db2 test.db

do_execsql_test 7.1 {
  BEGIN CONCURRENT;
    CREATE TABLE x2(a, b);
    INSERT INTO x2 VALUES(1, 2);
}

do_execsql_test -db db2 7.1.2 {
  BEGIN CONCURRENT;
    CREATE TABLE x3(a, b);
    INSERT INTO x3 VALUES(3, 4);
}

do_execsql_test         7.2.1 { COMMIT }

do_test 7.2.2 {
  catchsql COMMIT db2
} {1 {database is locked}}

do_test 7.3 {
  catchsql { SELECT * FROM x2 } db2
} {1 {no such table: x2}}

do_test 7.3 {
  catchsql { SELECT * FROM x1 } db2
} {1 {database is locked}}

do_execsql_test -db db2 7.1.2 {
  ROLLBACK;
  SELECT * FROM x1
} {}


finish_test

