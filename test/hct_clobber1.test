# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_clobber1

hct_reset_db

do_execsql_test 1.1 { 
  CREATE TABLE t1(a INTEGER PRIMARY KEY, b TEXT);
}

do_execsql_test 1.2 { 
  INSERT INTO t1 VALUES(1, 'abcde');
  INSERT INTO t1 VALUES(2, 'fghij');
  INSERT INTO t1 VALUES(3, 'klmno');
  INSERT INTO t1 VALUES(4, 'pqrst');

  CREATE INDEX x1 ON t1(b);
}

do_execsql_test 1.3 {
  UPDATE t1 SET b='FGHIJ' WHERE a=2
}

do_execsql_test 1.4 {
  SELECT val FROM hctstats WHERE stat='update_in_place'
} {0}

do_execsql_test 1.5 {
  UPDATE t1 SET b='hello' WHERE a=2
}

do_execsql_test 1.6 {
  SELECT val FROM hctstats WHERE stat='update_in_place'
} {1}

do_execsql_test 1.7 {
  PRAGMA integrity_check
} {ok}

finish_test

