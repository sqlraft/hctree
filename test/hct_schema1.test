# This file implements regression tests for SQLite library.
#

set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix hct_schema1

if 0 {

hct_reset_db

# This file tests the following things:
#
#    1) That schema modifications conflict with all other writes, and 
#       that all other writes conflict with schema modifications.
#
#    2) That CREATE and DROP TABLE/INDEX statements do not cause
#       page leaks. Even if they conflict.
#

do_execsql_test 1.0 {
  CREATE TABLE t1(x, y);
  INSERT INTO t1 VALUES(1, 2);
}

sqlite3 db2 test.db

do_execsql_test 1.2 {
  BEGIN;
    CREATE TABLE t2(a, b);
    WITH s(x) AS (
      SELECT 1 UNION ALL SELECT x+1 FROM s WHERE x<1000
    )
    INSERT INTO t2 SELECT randomblob(500), randomblob(500) FROM s;
}

do_execsql_test -db db2 1.2 {
  INSERT INTO t1 VALUES(3, 4);
}

do_catchsql_test 1.3 {
  COMMIT
} {1 {database is locked}}

execsql ROLLBACK

do_execsql_test 1.4 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 3}

do_execsql_test 1.5 {
  BEGIN;
    INSERT INTO t1 VALUES(5, 6);
}

do_execsql_test -db db2 1.6 {
  CREATE TABLE t2(a, b);
}

do_catchsql_test 1.7 {
  COMMIT
} {1 {database is locked}}
execsql ROLLBACK

do_execsql_test 1.8 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 4}

#-------------------------------------------------------------------------
db2 close


do_execsql_test 1.9 {
  CREATE TABLE t3(a, b);
  WITH s(x) AS (
      SELECT 1 UNION ALL SELECT x+1 FROM s WHERE x<1000
  )
  INSERT INTO t3 SELECT randomblob(500), randomblob(500) FROM s;
}

do_execsql_test 1.10 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 5}

do_execsql_test 1.11 {
  DROP TABLE t3
}

do_execsql_test 1.12 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 5}

do_execsql_test 1.13 {
  CREATE TABLE t4(a, b);
  WITH s(x) AS (
      SELECT 1 UNION ALL SELECT x+1 FROM s WHERE x<1000
  )
  INSERT INTO t4 SELECT randomblob(500), randomblob(500) FROM s;
}

do_execsql_test 1.14 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 6}

}
#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 2.0 {
  CREATE TABLE t3(a, b);
  WITH s(x) AS (
      SELECT 1 UNION ALL SELECT x+1 FROM s WHERE x<1000
  )
  INSERT INTO t3 SELECT randomblob(500), randomblob(500) FROM s;
  CREATE INDEX i1 ON t3(a, b);
}

sqlite3 db2 test.db
do_execsql_test -db db2 2.1 {
  SELECT count(*) FROM t3;
} {1000}

do_execsql_test -db db2 2.2 {
  DROP INDEX i1;
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 4}

db2 close
db close

breakpoint
sqlite3 db test.db
do_execsql_test 2.2 {
  PRAGMA hct_quiescent_integrity_check = 1;
  PRAGMA integrity_check;
  SELECT count(*) FROM hctpgmap WHERE logical_is_root;
} {1 ok 3}


#-------------------------------------------------------------------------
hct_reset_db

do_execsql_test 3.0 {
  CREATE TABLE t4(x, y);
  INSERT INTO t4 VALUES(1, 2);
  INSERT INTO t4 VALUES(3, 4);
}

sqlite3 db2 test.db

do_execsql_test -db db2 3.1 {
  BEGIN CONCURRENT;
    INSERT INTO t4 VALUES(5, 6);
}

do_execsql_test 3.2 {
  CREATE tABLE t5(a);
}

do_test 3.3 {
  catchsql { COMMIT } db2
} {1 {database is locked}}

#-------------------------------------------------------------------------
hct_reset_db
do_execsql_test 4.0 {
  CREATE TABLE x1(x, y);
}

do_execsql_test 4.1 {
  BEGIN;
    DROP TABLE x1;
    CREATE TABLE x1(a, b, c);
  COMMIT;
}

finish_test

